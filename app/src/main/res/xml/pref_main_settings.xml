<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>
        <Preference
            app:key="pref_network_settings"
            app:icon="@drawable/ic_settings_ethernet"
            app:summary="Configure the AI Network IP address"
            app:title="Network Settings" />
        <EditTextPreference
            app:icon="@drawable/ic_vpn_lock"
            app:key="@string/server_ip_address"
            app:title="Server IP Address"/>

    </PreferenceCategory>


    <PreferenceCategory
        app:key="theme_category"
        app:title="Theme">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_dark_theme"
            app:key="@string/pref_key_theme"
            app:title="Switch Theme"/>

    </PreferenceCategory>

</PreferenceScreen>